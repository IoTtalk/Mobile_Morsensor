<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="264dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="Name"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/inputName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/name"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/trackingTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="Time"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Spinner
            android:id="@+id/timeSelector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/inputName"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/trackingTime" />

        <TextView
            android:id="@+id/mins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/inputName"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/timeSelector"
            android:text="mins"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/trackStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/mins"
            android:layout_marginRight="32dp"
            android:layout_marginTop="8dp"
            android:text="Start"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/trackStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/trackStart"
            android:layout_marginRight="32dp"
            android:layout_marginTop="8dp"
            android:text="Stop"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/tv_lng"
            android:layout_width="222dp"
            android:layout_height="23dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="80dp"
            android:text="Lng"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="312dp" />

        <TextView
            android:id="@+id/tv_lat"
            android:layout_width="222dp"
            android:layout_height="23dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="46dp"
            android:text="Lat"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="342dp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>